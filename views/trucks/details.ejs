<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheet/starts.css" />
<div class="container text-center">
  <div class="row my-4">
    <div class="col-12 col-md-5 offset-md-1 px-2 ps-xl-5">
      <div class="card text-start mb-3 border-secondary" style="width: auto">
        <% if(foundTruck.image) { %>
        <img
          src="<%= foundTruck.image.url %>"
          class="card-img-top"
          alt="image-du-fournissuer"
        />
        <% } else { %>
        <img
          src="https://res.cloudinary.com/djdgwvhcp/image/upload/w_300/v1705106375/the_well/rdhbwigvzqbbfbd5g4y5.png"
          class="card-img-top"
          alt=""
        />
        <% } %>
        <div class="card-header fs-2 fw-bold"><%= foundTruck.name %></div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item fs-3">
            <b style="color: #5bc0de">Téléphone:</b> <%= foundTruck.phone %>
          </li>
          <li class="list-group-item fs-5">
            <b style="color: #5bc0de">Localisation:</b> <%= foundTruck.location
            %>
          </li>
          <li class="list-group-item fs-5">
            <b style="color: #5bc0de">Type d'Eau:</b> <%= foundTruck.type %>
          </li>
          <li class="list-group-item fs-5">
            <b style="color: #5bc0de">Prix:</b> <%= foundTruck.price %> DZD/L
          </li>
          <li class="list-group-item fs-5">
            <b style="color: #5bc0de">Ajouté par:</b> <%=
            foundTruck.author.username %>
          </li>
        </ul>
        <% if(currentUser && foundTruck.author.equals(currentUser._id)) {%>
        <form
          class="d-flex justify-content-evenly my-3"
          action="/trucks/<%= foundTruck._id %>?_method=DELETE"
          method="post"
        >
          <div
            class="d-flex flex-wrap gap-3 gap-md-0 justify-content-evenly align-items-center w-100"
          >
            <a
              href="/trucks/<%= foundTruck._id %>/edit"
              class="btn btn-outline-info d-inline col-12 col-sm-4"
              >Modifiez</a
            >
            <button class="btn btn-outline-danger col-12 col-sm-4">
              Supprimer
            </button>
          </div>
        </form>
        <% } %>
      </div>
      <!-- total price calculator section -->
      <div class="card my-3">
        <div class="card-header bg-dark my-3">
          <h4 class="card-title">Calculez le prix total</h4>
        </div>
        <div class="card-body fs-5">
          <div
            class="d-flex flex-wrap justify-content-between align-items-center"
          >
            <div class="form-floating mb-3 col-7 col-md-8">
              <input
                type="number"
                class="form-control"
                name="amount"
                id="amount"
                placeholder="Quantité"
                required
                style="height: 70px"
              />
              <label for="amount">Quantité d'eau en litre</label>
            </div>
            <p>(×) <%= foundTruck.price %> DZD/L</p>
          </div>
          <button class="btn" id="calc">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              x="0px"
              y="0px"
              width="40"
              height="40"
              viewBox="0,0,256,256"
              style="fill: #000000"
            >
              <g
                fill="none"
                fill-rule="nonzero"
                stroke="none"
                stroke-width="1"
                stroke-linecap="butt"
                stroke-linejoin="miter"
                stroke-miterlimit="10"
                stroke-dasharray=""
                stroke-dashoffset="0"
                font-family="none"
                font-weight="none"
                font-size="none"
                text-anchor="none"
                style="mix-blend-mode: normal"
              >
                <g transform="translate(0,256) rotate(-90) scale(6.4,6.4)">
                  <path
                    d="M20,38.5c-10.201,0 -18.5,-8.299 -18.5,-18.5c0,-10.201 8.299,-18.5 18.5,-18.5c10.201,0 18.5,8.299 18.5,18.5c0,10.201 -8.299,18.5 -18.5,18.5z"
                    fill="#5bc0de"
                  ></path>
                  <path
                    d="M20,2c9.925,0 18,8.075 18,18c0,9.925 -8.075,18 -18,18c-9.925,0 -18,-8.075 -18,-18c0,-9.925 8.075,-18 18,-18M20,1c-10.493,0 -19,8.507 -19,19c0,10.493 8.507,19 19,19c10.493,0 19,-8.507 19,-19c0,-10.493 -8.507,-19 -19,-19z"
                    fill="#ffffff"
                  ></path>
                  <path
                    d="M23,9l3,3l-8,8l8,8l-3,3l-11,-11z"
                    fill="#ffffff"
                  ></path>
                </g>
              </g>
            </svg>
          </button>
        </div>
        <div class="bg-body-tertiary resultSc p-3">-- Prix Total --</div>
      </div>
      <!-- end of total price calculator  -->
    </div>

    <!-- Map & reviews column -->
    <div class="col-12 col-md-5 px-2 pe-xl-5 text-start">
      <div id="map" class="mb-3"></div>
      <% if (currentUser) { %>
      <div class="my-5">
        <h2>Laissez un Avis</h2>
        <form
          class="validate-form mt-4"
          action="/trucks/<%= foundTruck._id %>/reviews"
          method="post"
          novalidate
        >
          <fieldset class="starability-grow">
            <input
              type="radio"
              id="no-rate"
              class="input-no-rate"
              name="review[rating]"
              value="0"
              checked
              aria-label="No rating."
            />
            <input
              type="radio"
              id="first-rate1"
              name="review[rating]"
              value="1"
            />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input
              type="radio"
              id="first-rate2"
              name="review[rating]"
              value="2"
            />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input
              type="radio"
              id="first-rate3"
              name="review[rating]"
              value="3"
            />
            <label for="first-rate3" title="Average">3 stars</label>
            <input
              type="radio"
              id="first-rate4"
              name="review[rating]"
              value="4"
            />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input
              type="radio"
              id="first-rate5"
              name="review[rating]"
              value="5"
            />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
          <label class="form-label" for="review">Avis:</label>
          <textarea
            class="form-control"
            name="review[body]"
            id="review"
            cols="30"
            rows="3"
            required
          ></textarea>
          <div class="invalid-feedback">Veuillez fournir un avis.</div>
          <div class="container-fluid d-flex justify-content-center">
            <button class="btn btn-outline-success px-5 mt-3">Ajoutez</button>
          </div>
        </form>
      </div>
      <% } else { %>
      <div class="card border-secondary text-center">
        <img
          class="col-12 col-md-6 align-self-center"
          alt="svgImg"
          src="data:image/svg+xml;base64,"
        />
        <div class="card-body">
          <h4 class="card-title">
            Avez-vous utilisé les services de ce fournisseur ?
          </h4>
          <p class="card-text">
            <a href="/login" class="text-info text-decoration-none"
              >Connectez vous</a
            >
            ou
            <a href="/register" class="text-info text-decoration-none"
              >S'inscrire</a
            >
            pour laisser un avis.
          </p>
        </div>
      </div>

      <% } %> <% if (foundTruck.reviews.length) { %>
      <h3 class="my-3 text-start">Des Avis sur ce Fournisseur</h3>
      <% for (let review of foundTruck.reviews) { %>
      <div class="card mb-3">
        <div class="card-body text-start">
          <!-- <h5 class="card-title">Notation: ></h5> -->
          <h5 class="card-title mb-2 text-body-secondary">
            by <%= review.author.username %>
          </h5>
          <p class="starability-result" data-rating="<%= review.rating %>">
            Rated: <%= review.rating %> stars
          </p>
          <p class="card-text"><%= review.body %></p>
          <% if(currentUser && review.author.equals(currentUser._id)) {%>

          <form
            action="/trucks/<%= foundTruck._id %>/reviews/<%= review._id %>?_method=DELETE"
            method="post"
          >
            <button class="btn btn-sm btn-outline-danger">Supprimer</button>
          </form>
          <% } %>
        </div>
      </div>
      <% } %> <% } %>
    </div>
  </div>
</div>

<script>
  const mapToken = "<%-process.env.MAPBOX_TOKEN%>";
  const locationQuery = "<%= foundTruck.location %>";

  let input = document.querySelector("#amount");
  const calcBtn = document.querySelector("#calc");
  const resultSc = document.querySelector(".resultSc");
  

  function priceCalc(amount, POO) {
    let inputAmount = parseInt(input.value);
    const truckPrice = parseInt("<%- foundTruck.price %>");

    let total = inputAmount * truckPrice;
    if (isNaN(total)) {
      resultSc.classList.add("bg-danger", "bg-opacity-50");
      resultSc.classList.remove("bg-body-tertiary", "bg-info");
      resultSc.innerHTML = "Entrez un numéro valide.";
    } else {
      resultSc.classList.add("bg-info", "bg-opacity-50");
      resultSc.classList.remove("bg-danger", "bg-body-tertiary");
      resultSc.innerHTML = `${total} DZD`;
    }
  }

  amount.addEventListener("input", ()=>{
    priceCalc();
  })

  calcBtn.addEventListener("click", (e) => {
    e.preventDefault();
    priceCalc();
  });
</script>

<script src="https://unpkg.com/@mapbox/mapbox-sdk/umd/mapbox-sdk.min.js"></script>
<script src="/javascript/detailsMap.js"></script>
