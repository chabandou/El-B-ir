<% layout('layouts/boilerplate') %>
<div class="container d-flex justify-content-center align-items-center my-5">
  <div class="row mb-3">
    <div class="col">
      <div class="card shadow border-light-subtle">
        <div class="card-body">
          <div class="d-flex justify-content-center align-items-center" >
          <img
            class="card-img-top w-75"
            src="https://res.cloudinary.com/djdgwvhcp/image/upload/v1705995879/the_well/bonbon-secure-protection-with-fingerprint-and-lock_ubw3ax.png"
            alt=""
          />
          </div>
          <h4 class="card-title">Se connecter</h4>
          <form action="/login" class="validate-form" method="post" novalidate>
            <div class="form-floating my-3">
              <input
              class="form-control"
              type="text"
              id="username"
              name="username"
              placeholder="Nom d'Utilisateur"
              autofocus
              required
              />
              <label for="username"
                >Nom d'Utilisateur</label
              >
              <div class="invalid-feedback">
                Veuillez fournir un Utilisateur valide.
              </div>
            </div>

            <div class="form-floating mb-3">
              <input
              class="form-control"
              type="password"
              id="password"
              name="password"
              placeholder="Mot de passe"
              required
              />
              <label class="form-label" for="password">Mot de passe</label>
              <div class="invalid-feedback">
                Veuillez fournir mot de passe valide.
              </div>
            </div>

            <div class="d-grid gap-2">
              <button class="btn btn-success my-3 btn-block text-white">
                Connectez-vous
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
